<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/background"
  android:fitsSystemWindows="true"
  android:orientation="vertical">

  <android.support.design.widget.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <android.support.v7.widget.Toolbar
      android:id="@+id/authorToolbar"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:background="?attr/colorPrimary"
      app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

  </android.support.design.widget.AppBarLayout>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <android.support.v7.widget.CardView
      android:id="@+id/cardAvatar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/card.margin.large"
      android:layout_marginBottom="@dimen/card.margin.big"
      android:layout_centerHorizontal="true"
      android:layout_gravity="center"
      app:cardElevation="0dp"
      app:contentPadding="@dimen/card.padding.small">
      <ImageView
        android:id="@+id/authorImage"
        android:layout_width="@dimen/image.author.width"
        android:layout_height="@dimen/image.author.height"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar"/>
    </android.support.v7.widget.CardView>

    <TextView
      android:id="@+id/txtPowered"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/cardAvatar"
      android:gravity="center"
      android:text="@string/powered"
      android:textColor="@color/white"
      android:textSize="@dimen/textview.powered.text.size" />

    <LinearLayout
      android:layout_below="@+id/txtPowered"
      android:gravity="center"
      android:layout_marginTop="@dimen/btns.margin.big"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <ImageView
        android:id="@+id/vk"
        android:layout_width="@dimen/image.vk.size"
        android:layout_height="@dimen/image.vk.size"
        android:layout_marginEnd="@dimen/image.soc.margin.small"
        android:layout_marginRight="@dimen/image.soc.margin.small"
        android:src="@drawable/vk"/>

      <ImageView
        android:id="@+id/git"
        android:layout_width="@dimen/image.git.size"
        android:layout_height="@dimen/image.git.size"
        android:layout_marginEnd="@dimen/image.soc.margin.small"
        android:layout_marginRight="@dimen/image.soc.margin.small"
        android:src="@drawable/github"/>
    </LinearLayout>

  </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>